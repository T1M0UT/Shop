@page
@model BonsaiShop.Pages.Admin.OrderManagementModel

@{
}

<div id="app">
    <div v-if="selectedOrder === null">
        <div class="tabs is-centered">
            <ul>
                <li v-bind:class="{'is-active': status === 0}"><a @@click="status = 0">Pending</a></li>
                <li v-bind:class="{'is-active': status === 1}"><a @@click="status = 1">Packed</a></li>
                <li v-bind:class="{'is-active': status === 2}"><a @@click="status = 2">Shipped</a></li>
            </ul>
        </div>
        <div v-if="orders.length > 0">
            <p v-for="order in orders">
                <a @@click="selectOrder(order.id)">{{order.orderReference}} - {{order.email}}</a>
            </p>
        </div>
    </div>
    <div v-else>
        <div class="level is-mobile">
            <div class="level-left">
                <div class="level-item">
                    <p>
                        <button class="button is-responsive is-danger" @@click="exitOrder()">Exit</button>
                    </p>
                </div>
                <div class="level-item">
                    <button class="button is-responsive is-primary" @@click="updateOrder()">Process</button>
                </div>
            </div>
        </div>

        <p class="title">{{selectedOrder.orderReference}}</p>
        <p class="subtitle">{{selectedOrder.name}} -- {{selectedOrder.surname}}</p>
        <p class="subtitle">{{selectedOrder.email}}</p>
        <p class="subtitle">{{selectedOrder.phoneNumber}}</p>
        
    </div>
</div>

@section Scripts
{
    <script src="~/js/admin/orders.js"></script>
}

@page
@model BonsaiShop.Pages.Admin.ConfigureUsersModel

@{
    Layout = "_AdminLayout";
}

<div id="app" class="container">
    <div class="columns">
        <div class="column is-4">
            <table class="table">
                <tr>
                    <th>Managers</th>
                    <th></th>
                </tr>
                <tr v-for="(user, index) in users">
                    <td>{{user.userName}}</td>
                    <td><a class="clickable" @@click="deleteUser(user.id, index)">Remove</a></td>
                </tr>
            </table>
        </div>
        <div class="column is-6">
            <div class="container">
                <label class="label">Create Manager</label>
                <input class="input" v-model="username" placeholder="Username"/>
                <input class="input" v-model="password" placeholder="Password"/>
                <button class="button is-success" @@click="createUser()">Create</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/admin/users.js"></script>
}

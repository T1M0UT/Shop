@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<a class="nav-link text-dark" asp-area="" asp-page="/Admin/Index">Admin</a>
<div>
    @{
        foreach (var p in Model.Products)
        {
            <a asp-page="Product" asp-route-name="@p.Name.Replace(" ", "-")">
                @p.Name - @p.Description - @p.Price
            </a>
            <br/>
        }
    }
</div>